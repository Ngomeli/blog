<%- include("partials/header")%>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit
            <%=blog.title %>
        </div>
        <form action="/blogs" method="POST" class="ui form">
            <div class="field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" placeholder="Title">
            </div>
            <div class="field">
                <label for="image">Image</label>
                <input type="text" name="blog[image]" placeholder="Image">
            </div>
            <div class="field">
                <label for="blog post">Blog Content</label>
                <textarea name="blog[body]" id="" cols="30" rows="10"></textarea>
            </div>
            <input class="ui secondary big button" type="submit">
        </form>
    </div>
    <%- include("partials/footer")%>